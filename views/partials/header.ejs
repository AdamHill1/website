<head>
  <title>49er Dorm Buddies</title>
  <meta charset="UTF-8">
  <link rel="stylesheet" type="text/css" href="/assets/stylesheets/project.css">
  <link href='../../assets/fullcalendar/main.css' rel='stylesheet' />
  <script src='../../assets/fullcalendar/main.js'></script>
  <script>

    document.addEventListener('DOMContentLoaded', function () {
      var calendarEl = document.getElementById('calendar');
      var calendar = new FullCalendar.Calendar(calendarEl, {

        schedulerLicenseKey: 'CC-Attribution-NonCommercial-NoDerivatives',
        initialView: 'dayGridMonth',
        headerToolbar: {
          left: 'prev,next',
          center: 'title',
          right: 'dayGridDay, dayGridMonth'
        },

        events: [
          { // this object will be "parsed" into an Event Object
            title: 'The Title', // a property!
            start: '2021-11-01T18:30:00', // a property!
            end: '2021-11-01T19:30:00',// a property! ** see important note below about 'end' **
            url: './createEvent',
            backgroundColor: 'red',
            textColor: 'black',
            allDay: 'false',
            daysOfWeek: ['1'],
            startRecur: '2021-11-01',
            endRecur: '2021-11-23',
            description: 'this is a test',
            type: 'Dorm Event'
            //startTime: '2021-11-01T18:30:00',
            //endTime: '2021-11-01T19:30:00',

          }
        ]

      });
      calendar.render();
    });

  </script>
</head>
