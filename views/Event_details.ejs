<%- include('partials/header') -%>



        <body>
            <main >
                <h1>Event Details</h1>
                <h2><%= event.title%></h2>
            <% if(user.userId == event.creator){%>
            <form>
            <button type="submit" formmethod="GET" formaction="/<%= event.eventId%>/edit">Edit</button>
            <button type="submit" formmethod="POST" formaction="/<%= event.eventId%>?_method=DELETE">Delete</button>
            </form>
            <%}%>
            <% if(event.roomId == 0){%>
                <form>
                   <% if(user.role == "student"){%>
                        <button type="submit" formmethod="POST" formaction="/student/removeAnnoun/<%= event.eventId%>?_method=DELETE">Delete</button>
                        <%}else{%>
                        <button type="submit" formmethod="POST" formaction="/RA/removeAnnoun/<%= event.eventId%>?_method=DELETE">Delete</button>
                        <%}%>
                </form>
                <%}%>
            <% 
            let dateTime = event.start.split('T');
            let start = moment(dateTime[1], 'HH:mm:ss').format('hh:mm A');
            let end = event.end.split('T');
            end = moment(end[1], 'HH:mm:ss').format('hh:mm A');

            %>
            <ul class="eventShow">
                <li><p>Category: <%= event.type%></p></li>
                <li><p>Date: <%= dateTime[0]%></p></li>
                <li><p><%= start%>-<%= end%></p></li>
                <li><p>Repeat: <%= event.repeat%></p></li>
                <li><p>Description: <%= event.description%></p></li>
            </ul>
            
                
                
            
            
            

            </main>
        </body>
        <%- include('partials/footer') -%>