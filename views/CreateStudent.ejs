<%- include('partials/header') -%>

    <body class="announcement-body-page">
        <main>

            <Form id="createEvent" action='../createstudent' method='POST'>
                <table>
                    <tr>
                        <th>First Name:</th>
                        <td><input type="text" id="fName" name="fName" required></td>
                    </tr>
                    <tr>
                        <th>Last Name:</th>
                        <td><input type="text" id="lName" name="lName" required></td>
                    </tr>
                    <tr>
                        <th>UNCC Email:</th>
                        <td><input type="email" id="email" pattern=".+@uncc.edu" name="email" required></td>
                    </tr>
                    <tr>
                        <th>Room Number:</th>
                        <td><input type="text" id="roomID" name="roomID" required></td>

                    </tr>
                    <tr>
                        <th>Role:</th>
                        <td><select id="role" name="role" required>
                                <option value="staff">Staff</option>
                                <option value="RA">RA</option>
                                <option value="Student">Student</option>
                        </td>
                    </tr>
                    <button type="submit" id="formButton" >Add Student</button>
                </table>

            </Form>

        </main>
    </body>
    <%- include('partials/footer') -%>